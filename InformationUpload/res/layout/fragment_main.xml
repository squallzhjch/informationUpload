<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/center_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_map_btn_press"
        android:scaleType="centerInside"
        android:src="@drawable/person_head"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/discovery_situation"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_refresh"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"

            android:background="@drawable/icon_map_btn_press"
            android:scaleType="centerInside"
            android:src="@drawable/main_refresh"/>


        <ImageView
            android:id="@+id/main_fix_position"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerInside"
            android:background="@drawable/icon_map_btn_press"
            android:src="@drawable/main_fix_position"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/discovery_situation"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_map_zoom_btn_b">
        <FrameLayout
            android:id="@+id/main_enlarge_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:background="@drawable/icon_map_zoom_btn_press">

        </FrameLayout>
        <FrameLayout
            android:id="@+id/main_reduce_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:background="@drawable/icon_map_zoom_btn_press">

        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/discovery_situation"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/icon_map_sumbit_btn_press"
        android:text="发现情况"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>